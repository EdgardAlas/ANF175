<div
	class="modal fade"
	id="agregar-empleado-modal"
	tabindex="-1"
	data-bs-focus="false"
	aria-labelledby="agregarEmpleadoModal"
	aria-hidden="true"
	data-bs-backdrop="static"
	data-bs-keyboard="false"
	tabindex="-1"
>
	<div class="modal-dialog modal-lg">
		<form class="modal-content" id="agregar-empleado-form">
			<div class="modal-header bg-dark text-white">
				<h5 class="modal-title" id="agregarEmpleadoModal">
					Agregar empleado
				</h5>
				<button
					type="button"
					class="btn-close"
					data-bs-dismiss="modal"
					aria-label="Close"
				></button>
			</div>
			<div class="modal-body">
				<div class="row">
					<div class="col-12 col-md-6 mb-3">
						<label for="dui" class="form-label">DUI</label>
						<input
							type="text"
							class="form-control"
							id="dui"
							name="dui"
							autocomplete="off"
							required
							placeholder="12345678-9"
						/>
					</div>
					<div class="col-12 col-md-6 mb-3">
						<label for="nombre" class="form-label">Nombre</label>
						<input
							type="text"
							class="form-control"
							id="nombre"
							name="nombre"
							autocomplete="off"
							required
							placeholder="Nombre"
						/>
					</div>
				</div>
				<div class="row">
					<div class="col-12 col-md-6 mb-3">
						<label for="telefono" class="form-label">Teléfono</label>
						<input
							type="tel"
							class="form-control"
							id="telefono"
							name="telefono"
							autocomplete="off"
							required
							placeholder="0000-0000"
						/>
					</div>
					<div class="col-12 col-md-6 mb-3">
						<label for="correo" class="form-label">Correo</label>
						<input
							type="email"
							class="form-control"
							id="correo"
							name="correo"
							autocomplete="off"
							required
							placeholder="correo@dominio.com"
						/>
					</div>
				</div>
				<div class="row">
					<div class="col-12 col-md-6 mb-3">
						<label for="usuario" class="form-label">Usuario</label>
						<input
							type="text"
							class="form-control"
							id="usuario"
							name="usuario"
							autocomplete="off"
							required
							placeholder="usuario"
						/>
					</div>
					<div class="col-12 col-md-6 mb-3">
						<label for="clave" class="form-label">Contraseña</label>
						<input
							type="password"
							class="form-control"
							id="clave"
							name="clave"
							autocomplete="off"
							required
							placeholder="Contraseña"
							minlength="8"
						/>
					</div>
				</div>
				<div class="row">
					<div class="col-6 d-none d-md-flex"></div>
					<div
						class="col-12 col-md-6 form-check"
						style="padding-left: 2.5rem"
					>
						<input
							class="form-check-input"
							type="checkbox"
							value=""
							id="mostrar-clave"
						/>
						<label class="form-check-label" for="mostrar-clave">
							Mostrar contraseña
						</label>
					</div>
				</div>
			</div>
			<div class="modal-footer">
				<button
					type="button"
					class="btn btn-secondary"
					data-bs-dismiss="modal"
				>
					<i class="bi bi-x-circle"></i>
					Cerrar
				</button>
				<button
					type="submit"
					class="btn btn-primary text-white"
					id="btn-agregar-empleado"
				>
					<i class="bi bi-check-square" id="icono-editar"></i>
					<span id="btn-texto"> Agregar </span>
				</button>
			</div>
		</form>
	</div>
</div>
