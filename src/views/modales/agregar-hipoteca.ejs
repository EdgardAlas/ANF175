<div
	class="modal fade"
	id="agregar-hipoteca-modal"
	tabindex="-1"
	data-bs-focus="false"
	aria-labelledby="agregarHipotecaModal"
	aria-hidden="true"
	data-bs-backdrop="static"
	data-bs-keyboard="false"
	tabindex="-1"
>
	<div class="modal-dialog modal-lg">
		<form class="modal-content" id="agregar-hipoteca-form">
			<div class="modal-header bg-dark text-white">
				<h5 class="modal-title" id="agregarHipotecaModal">
					Registro de hipotecas
				</h5>
				<button
					type="button"
					class="btn-close"
					data-bs-dismiss="modal"
					aria-label="Close"
				></button>
			</div>
			<div class="modal-body">
				<div class="col-12 col-md-12 mb-3">
					<label for="cliente" class="form-label">Cliente</label>
					<select class="form-select" id="combocliente">
						<option value="-1">Seleccione</option>
					</select>
				</div>
				<div class="row">
					<div class="col-12 col-md-6 mb-3">
						<label for="dui" class="form-label"
							>DUI del propietario</label
						>
						<input
							type="text"
							class="form-control"
							id="dui"
							name="dui"
							autocomplete="off"
							required
							placeholder="05326269-8"
						/>
					</div>
					<div class="col-12 col-md-6 mb-3">
						<label for="nombre" class="form-label"
							>Nombre del Propietario</label
						>
						<input
							type="text"
							class="form-control"
							id="nombre"
							name="nombre"
							autocomplete="off"
							required
						/>
					</div>
				</div>
				<div class="row">
					<div class="col-12 col-md-6 mb-3">
						<label for="longitud" class="form-label">Longitud</label>
						<input
							type="text"
							class="form-control"
							id="longitud"
							name="longitud"
							autocomplete="off"
							required
						/>
					</div>
					<div class="col-12 col-md-6 mb-3">
						<label for="latitud" class="form-label">Latitud</label>
						<input
							type="text"
							class="form-control"
							id="latitud"
							name="latitud"
							autocomplete="off"
							required
						/>
					</div>
				</div>
				<div class="row">
					<div class="col-12 col-md-6 mb-3">
						<label for="altitud" class="form-label">Altitud</label>
						<input
							type="text"
							class="form-control"
							id="altitud"
							name="altitud"
							autocomplete="off"
						/>
					</div>
                    <div class="col-12 col-md-6 mb-3">
						<label for="tamanio" class="form-label">Tama√±o</label>
						<input
							type="text"
							class="form-control"
							id="tamanio"
							name="tamanio"
							autocomplete="off"
						/>
					</div>
                    <div class="col-12 col-md-6 mb-3">
                        <div class="col-12 col-md-12 mb-3">
                            <label for="zona" class="form-label">Zona</label>
                            <select class="form-select" id="combozona">
                                <option value="-1">Seleccione</option>
                                <option value="1">Rural</option>
                                <option value="2">Urbano</option>
                            </select>
                        </div>
					</div>
                    <div class="col-12 col-md-6 mb-3">
						<label for="direccion" class="form-label">Direccion</label>
						<input
							type="text"
							class="form-control"
							id="direccion"
							name="direccion"
							autocomplete="off"
						/>
					</div>
					<div class="col-12 col-md-6 mb-3">
						<label for="valor" class="form-label">Valor actual</label>
						<input
							type="number"
							class="form-control"
							id="valor"
							name="valor"
							autocomplete="off"
							required
							max="100000"
							min="6000"
							placeholder="$"
						/>
					</div>
					
					<div class="col-12 col-md-6 mb-3">
						<label for="archivo_escritura" class="form-label">Archivo</label>
						<input
							type="file"
							class="form-control"
							id="archivo_escritura"
							name="archivo_escritura"
							required
							autocomplete="off"
							accept=".pdf,.doc,.docx,image/*"
						/>
					</div>
				</div>
			</div>
			<div class="modal-footer">
				<button
					type="button"
					class="btn btn-secondary"
					data-bs-dismiss="modal"
				>
					<i class="bi bi-x-circle"></i>
					Cerrar
				</button>
				<button
					type="submit"
					class="btn btn-primary text-white"
					id="btn-agregar-hipoteca"
				>
					<i class="bi bi-check-square" id="icono-editar"></i>
					<span id="btn-texto"> Agregar </span>
				</button>
			</div>
		</form>
	</div>
</div>
