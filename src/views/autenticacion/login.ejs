<!DOCTYPE html>
<html lang="en">
	<head>
		<%- include("../partials/header.ejs", { titulo: "Iniciar sesión" })%>
		<title>Iniciar sesión</title>
	</head>
	<body class="bg-light d-flex justify-content-center align-items-center">
		<div class="bg-white shadow-lg p-4 rounded rounded-3 login-container">
			<h1>Iniciar sesion</h1>
			<form class="d-grid gap-3" id="form-login">
				<div>
					<label for="" class="form-label">Usuario/correo</label>
					<input
						type="text"
						class="form-control"
						name="usuario"
						id="usuario"
					/>
				</div>

				<div>
					<label for="" class="form-label">Contraseña</label>
					<input
						type="password"
						class="form-control"
						name="clave"
						id="clave"
					/>
				</div>

				<div class="form-check">
					<input
						class="form-check-input"
						type="checkbox"
						value=""
						id="mostrar-clave"
					/>
					<label class="form-check-label" for="mostrar-clave">
						Mostrar contraseña
					</label>
				</div>

				<div class="d-flex flex-row-reverse">
					<button
						class="btn btn-primary text-white fw-bold"
						id="btn-submit"
					>
						<i class="bi bi-box-arrow-in-right"></i>
						Iniciar sesión
					</button>
				</div>
			</form>
		</div>
		<%- include("../partials/scripts.ejs")%>
		<script src="/js/login.js?t=<%= Date.now() %>"></script>
	</body>
</html>
