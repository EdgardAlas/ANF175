<!DOCTYPE html>
<html lang="en">
	<head>
		<%- include("../partials/header.ejs", { titulo: "Empleados" })%>
	</head>
	<body class="sb-nav-fixed">
		<%- include("../partials/navbar.ejs")%>
		<div id="layoutSidenav">
			<%- include("../partials/sidebar.ejs", {rol, pagina})%>
			<div id="layoutSidenav_content">
				<main>
					<div class="container-fluid px-4">
						<h1 class="mt-4">Empleados</h1>
						<div class="row gap-3">
							<div class="col-12">
								<button
									class="btn btn-primary text-white"
									data-bs-toggle="modal"
									data-bs-target="#agregar-empleado-modal"
									data-backdrop="static"
									data-keyboard="false"
								>
									<i class="bi bi-plus-square"></i>
									Agregar empleado
								</button>
							</div>
							<div class="col-12 table-responsive">
								<table id="tabla-empleados" class="table table-striped">
									<thead>
										<tr>
											<th>DUI</th>
											<th>Nombre</th>
											<th>Telefono</th>
											<th>Usuario</th>
											<th>Acciones</th>
										</tr>
									</thead>
									<tbody id="tbody-empleados"></tbody>
								</table>
							</div>
						</div>
					</div>
				</main>
				<%- include("../partials/footer.ejs") %>
			</div>
		</div>
		<%- include("../modales/agregar-empleado.ejs") %> <%-
		include("../partials/scripts.ejs")%>
		<script src="/js/empleados.js?t=<%= Date.now() %>"></script>
	</body>
</html>
